<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <ul>
        <li><h1 id="header_text">Adopt Don't Shop</h1></li>
        <li style="float: right;"><%= link_to 'Pets Index', "/pets" %></li>
        <li style="float: right;"><%= link_to 'Shelters Index', "/shelters" %></li>
        <li style="float: right;"><%= link_to "Favorites: #{@favorites.total_count}", '/favorites' %></li>
      </ul>
    </nav>

    <% flash.each do |type, message| %>
      <p><%= message %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
