<h1>Favorite Pets</h1>
 <%= link_to "Remove All", "/favorites", method: :delete %>
 <%= link_to "Adoption Application", "/adopt_applications/new" %>

<% if @favorites.total_count == 0 %>
  <p>You have no pets!</p>
<% else %>
  <% @favs.each do |pet| %>
    <h3><%= link_to pet.name, "pets/#{pet.id}" %></h3>
    <%= image_tag pet.image, size: 100 %>
  <% end %>
<% end %>
