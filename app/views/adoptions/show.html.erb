<h2> Name: <%= @adoption.name %></h2>
<p> Address: <%= @adoption.address %></p>
<p> City: <%= @adoption.city %></p>
<p> State: <%= @adoption.state %></p>
<p> Zip: <%= @adoption.zip %></p>
<p> Phone Number: <%= @adoption.phone_number %></p>
<p> Description: <%= @adoption.description %></p>
<p> Pets to adopt: </p><% @adoption.pets.each do |pet| %>
  <%= link_to "#{pet.name}", "/pets/#{pet.id}" %> -
  <% if pet.adoptable == "Adoptable" %>
    <%= link_to "Approve Application for #{pet.name}", "/adoptions/#{@adoption.id}/pets/#{pet.id}", method: :patch%><br>
  <% elsif pet.adoptable == "Pending adoption for #{@adoption.name}" %>
    <%= link_to "Unapprove Application for #{pet.name}", "/adoptions/#{@adoption.id}/pets/#{pet.id}", method: :delete%><br>
  <% else %>
    <%= "#{pet.name} already pending."%>
  <% end %>
<% end %>
