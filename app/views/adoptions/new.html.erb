<h1>New Adoption</h1>

<%= form_tag '/adoptions', method: :post do %>
  <h2>Favorited Pets</h2>
  <% @favorite_pets.each do |pet| %>
    <%= label_tag pet.name %>
    <%= check_box_tag pet.name %><br>
  <% end %>

  <%= label_tag :name %>
  <%= text_field_tag :name %><br>

  <%= label_tag :address %>
  <%= text_field_tag :address %><br>

  <%= label_tag :city %>
  <%= text_field_tag :city %>

  <%= label_tag :state %>
  <%= text_field_tag :state %>

  <%= label_tag :zip %>
  <%= text_field_tag :zip %><br>

  <%= label_tag :phone_number %>
  <%= text_field_tag :phone_number %><br>

  <%= label_tag :description %>
  <%= text_field_tag :description %><br>

  <%= submit_tag 'Submit Application' %>
<% end %>
