<h2> Name: <%= @shelter.name %></h2>
<p> Address: <%= @shelter.address %></p>
<p> City: <%= @shelter.city %></p>
<p> State: <%= @shelter.state %></p>
<p> Zip: <%= @shelter.zip %></p>

<br><%= link_to 'Update Shelter', "/shelters/#{@shelter.id}/edit" %></br>
<br><%= link_to 'Delete Shelter', "/shelters/#{@shelter.id}", method: :delete %></br>
<br><%= link_to "#{@shelter.name}'s Pets", "/shelters/#{@shelter.id}/pets" %></br>

<h2>User Reviews</h2>
<%= link_to  "New Review", "/shelters/#{@shelter.id}/reviews/new" %>

<% @shelter.reviews.each do |review| %>
  <p>----------------------------</p>
  <p>Title: <%= review.title %></p>
  <p>Rating: <%= review.rating %></p>
  <p><%= review.content %></p>
  <p><%= image_tag review.image %></p>
  <%= link_to 'Delete Review', "/shelters/#{@shelter.id}/reviews/#{review.id}", method: :delete%>
  <%= link_to  "Edit Review", "/shelters/#{@shelter.id}/reviews/#{review.id}/edit" %>
<% end %>
