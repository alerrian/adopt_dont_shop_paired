<h2>Edit Review</h2>

<%= form_tag "/shelters/#{@review.shelter.id}/reviews/#{@review.id}", method: :patch do %>
  <%= label_tag :title %>
  <%= text_field_tag :title, @review.title %>

  <%= label_tag :rating %>
  <%= select_tag :rating, options_for_select([5,4,3,2,1]), selected: @review.rating %>

  <%= label_tag :content %>
  <%= text_field_tag :content, @review.content %>

  <%= label_tag :image %>
  <%= text_field_tag :image, @review.image %>

  <%= submit_tag "Submit Review" %>
<% end %>
