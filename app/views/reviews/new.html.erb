<h2>New Review</h2>

<%= form_tag "/shelters/#{@shelter_id}/reviews", method: :post do %>
  <%= label_tag :title %>
  <%= text_field_tag :title %>

  <%= label_tag :rating %>
  <%= select_tag :rating, options_for_select([5,4,3,2,1]), prompt: "-" %>

  <%= label_tag :content %>
  <%= text_field_tag :content %>

  <%= label_tag :image %>
  <%= text_field_tag :image %>

  <%= submit_tag "Submit Review" %>
<% end %>
