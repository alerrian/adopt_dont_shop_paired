<h2> Name: <%= @pet.name %></h2>
<img src="<%= @pet.image %>"<br>
<p> Description: <%= @pet.description %></p>
<p> Age: <%= @pet.age %></p>
<p> Sex: <%= @pet.sex %></p>
<p> Adoptable: <%= @pet.adoptable %></p>

<section id="pet-<%= @pet.id %>">
  <p><%= link_to 'Update Pet', "/pets/#{@pet.id}/edit" %></p>
  <% if in_favs? %>
    <%= link_to "Unfavorite Pet", "/favorites/#{@pet.id}", method: :delete %>
  <% else %>
    <%= link_to "Add Favorite", "/favorites/#{@pet.id}", method: :patch %>
  <% end %>
  <p><%= link_to 'Delete Pet', "/pets/#{@pet.id}", method: :delete %></p>
</section>
